    <form id="bmi" action="../p7_1/index.html">
        <p>Please fill out all your information so we can calculate your BMI!</p>
<hr />
        <label for="input" class="question">What is your weight (lbs)?</label>
        <input class="calculations" type="text" name="weight" size="10" max="4"><br><br>

        <label for="input1" class="question">What is your height (in)?</label>
        <input class="calculations" type="text" name="height" size="10"><br><br>

        <input type="submit" id="calculateBMI" name="verify" value="Calculate BMI"><br>

        <p>Your BMI: 
            <input class="calculations" type="text" id="dopeBMI" size="10"><br><br>
            This Means: 
                <input class="calculations" type="text" id="meaning" size="25"><br><br>
                </p>
        </form>
    </body>

<script>

    //cleans it clean 
    "use strict"

   
    $(document).ready(function(){
		$("#bmi").submit(function(e) {
			e.preventDefault();
			var weight = $("[name='weight']").val();
			var height = $("[name='height']").val();


			if (weight > 0 && height > 0) {
				var finalBmi = (weight / (height * height)) * 703;
				$("#dopeBMI").val(finalBmi);


				if (finalBmi < 18.5) {
					$("#meaning").val("You are underweight.");
				}

				if (finalBmi > 18.5 && finalBmi < 24.9) {
					$("#meaning").val("You are normal.");
				}

				if (finalBmi > 24.9 && finalBmi < 29.99) {
					$("#meaning").val("You are overweight.");
				}

                if (finalBmi > 29.99) {
					$("#meaning").val("You are obese.");
				}

             //else if statement saying if fields 1 and 2 don't have input that the user
            //will be asked to fill out every field
            //could have made a simplier way to do this, by perhaps combining them
            } else if (weight.val() == '' || weight.val() == weight.prop('defaultValue')) {
                    alert("Please fill out every field and submit again");
                    return false;
                } else if (height.val() == '' || height.val() == height.prop('defaultValue')) {
                    alert("Please fill out every field and submit again");
                    return false;

                }
				
		});
	});
    </script>

